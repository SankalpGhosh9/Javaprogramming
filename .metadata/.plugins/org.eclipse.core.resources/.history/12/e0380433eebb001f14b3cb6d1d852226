package Day2;

public class ReverseNumber {

	public static void main(String[] args) {
	   int number = 1234;
	   int length = String.valueOf(number).length();
	   int rem=0 ,temp=0;
	   System.out.println(length);
	   while(number!=0) {
		   for (int i =0;i<length;i++) {
			   rem = number % 10;
			   number = number /10;
			   temp = temp + rem*((number-i)^10);
			   
		   }
		  System.out.println(temp);
	   }

	}

